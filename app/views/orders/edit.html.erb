<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <%= form_for(@order, url: update_order_order_path(@order), method: :patch, class: 'mt-4') do |f| %>
            <div class="form-group">
              <%= f.label :status, class: 'form-label' %>
              <%= f.select :status, Order.statuses.keys.map { |s| [s.humanize, s] }, { include_blank: 'Select Status' }, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :address, class: 'form-label' %>
              <%= f.text_field :address, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :price, class: 'form-label' %>
              <%= f.number_field :price, class: 'form-control' %>
            </div>

            <div class="form-group text-center flex">
              <%= f.submit 'Update Order', class: 'btn btn-primary btn-rounded' %>
              <%= link_to 'Back', admin_index_path, class: 'btn btn-primary btn-rounded' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
