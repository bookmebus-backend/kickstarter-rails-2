<h1 class="mt-4 mb-4">All Product</h1>
<div class="table-responsive p-4">
  <table class="table table-bordered table-hover rounded">
    <thead class="thead-dark">
      <tr>
        <th>ID</th>
        <th>Image</th>
        <th>Name</th>
        <th>Price</th>
        <th>Description</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @products&.each do |product| %>
        <tr>
          <td><%= product.id %></td>
          <% if product.image.attached? %>
            <td><%= image_tag product.image, class: "img-fluid", style: "width: 100px; height: auto;" %></td>
          <% else %>
            <td>No image available</td>
          <% end %>
          <td><%= product.name %></td>
          <td>$<%= product.price %></td>
          <td><%= product.description %></td>
          <td class="flex justify-content-center align-center text-center">
            <%= link_to 'Edit', edit_product_path(product), class: 'btn btn-primary btn-sm' %>
            <%= link_to 'Delete', product, method: :delete, data: { "turbo-method": :delete } , class: 'btn btn-danger btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
