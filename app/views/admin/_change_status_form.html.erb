<%= form_with(model: order, url: update_status_order_path(order), method: :patch, local: true, class: 'status-form') do |f| %>
  <%= f.select :status, Order.statuses.keys.map { |s| [s.capitalize, s] }, {}, class: 'form-control' %>
  <%= f.submit 'Update Status', class: 'btn btn-primary mt-2' %>
<% end %>