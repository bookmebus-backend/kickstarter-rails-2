<h1>All Products</h1>
<div class="row">
  <% @products.each do |product| %>
    <div class="col-md-4 mb-4">
      <div class="card">
        <%= link_to product do %>
          <%= image_tag product.image, class: "card-img-top", alt: product.name %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= link_to product.name, product %></h5>
        </div>
      </div>
    </div>
  <% end %>
</div>
