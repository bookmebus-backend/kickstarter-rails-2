<div class= "container">
  <%= form_with(model: @product) do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :description %>
    <%= f.text_area :description %>

    <%= f.label :price %>
    <%= f.number_field :price %>

    <%= f.label :image %>
    <%= f.file_field :image %>
    
    <%= f.submit "Save Product" %>
  <%end%>
</div>
