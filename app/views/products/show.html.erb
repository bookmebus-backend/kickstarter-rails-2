<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="row g-0">
          <div class="col-md-4">
            <div id="<%= dom_id @product %>">
              <% if @product.image.attached? %>
                <%= image_tag @product.image, class: "img-fluid" %>
              <% else %>
                No image available
              <% end %>
            </div>
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h1 class="card-title"><%= @product.name %></h1>
              <p class="card-text"><strong>Description:</strong> <%= @product.description %></p>
              <p class="card-text"><strong>Price:</strong> <%= number_to_currency(@product.price) %></p>

              <%= form_with(url: cart_add_path, class: "mt-3") do |f| %>
                <%= f.hidden_field :id, value: @product.id %>
                <p>Quantity</p>
                <%= f.number_field :quantity, value: 0, min: 1, class: "form-control" %>
                <%= f.submit "Add to cart", class: "btn btn-primary mt-2" %>
              <% end %>
              <%= link_to "Back to all products", products_path, class: "btn btn-secondary mt-2" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
