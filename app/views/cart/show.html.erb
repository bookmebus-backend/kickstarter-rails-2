<div class="container mt-4">
  <div class="card rounded text-center">
    <div class="card-body">
      <div class="row">
        <h1 class="card-title">Your Cart</h1>
        <div class="col-md-6">
          <%= render 'cart/cart_items' %>
        </div>
        <% if @cart.cart_items %>
          <div class="card mb-2">
            <div class="card-body">
              <p class="card-text">Your total is $ <%= @cart.total %></p>
            </div>
            <% @cart.cart_items.each do |cart_item| %>
              <% product = cart_item.product %>
              <div class="card-body">
                <p class="card-text">
                  <%= product.name %> * <%= cart_item.quantity %> = $ <%= product.price * cart_item.quantity %>
                </p>
              </div>
            <% end %>
          </div>
          <%= link_to "Proceed to Order", new_order_path, class: "btn btn-success mt-3" %>
        <% end %>
      </div>
      <div class="col-md-80">
        <% if @cart.cart_items.empty? %>
          <div class="d-flex justify-content-center align-items-center p-5">
            <svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" fill="red" class="bi bi-cart" viewBox="0 0 16 16">
              <path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5M3.102 4l1.313 7h8.17l1.313-7H3.102zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4m7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4m-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2m7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2"/>
            </svg>
          </div>
          <p class="card-text">Cart is empty</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
